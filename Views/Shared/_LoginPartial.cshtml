﻿@using Microsoft.AspNetCore.Identity
@using MyFurnitureShop.Infrastructure.Data.Entities
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
       if (User.IsInRole("Administrator"))
       {
           <li class="nav-item">
               <form class="form-inline" asp-area="" asp-controller="User" asp-action="Logout">
                   <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
               </form>
           </li>
       }
       else
       {

            <li >
                <form asp-controller="User" asp-action="Logout" asp-route-id="@UserManager.GetUserId(User)">
                    <button type="submit">Logout</button>
                </form>
            </li>
       }
    }
    else
    {
        <li>
            <a asp-controller="User" asp-action="Register">Register</a>
        </li>
        <li>
            <a asp-controller="User" asp-action="Login">Login</a>
        </li>
    }
</ul>