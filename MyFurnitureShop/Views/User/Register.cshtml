﻿@using MyFurnitureShop.Models.User
@model RegisterViewModel


<body>
    <section class="vh-100 bg-image"
             style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center mb-5">Log into your account</h2>

                                <form id="registerForm" method="post">

                                    <div class="text-center mb-3">
                                        <label asp-for="@Model.UserName">Username</label>
                                        <input class="form-control " autocomplete="username" aria-required="true" asp-for="@Model.UserName" />
                                        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                                    </div>

                                    <div class="text-center mb-3">
                                        <label asp-for="@Model.Email">Email</label>
                                        <input class="form-control " autocomplete="email" aria-required="true" asp-for="@Model.Email" />
                                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                    </div>

                                    <div class="text-center mb-3">
                                        <label asp-for="@Model.Password">Password</label>
                                        <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.Password" />
                                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                    </div>

                                    <div class="text-center mb-3">
                                        <label asp-for="@Model.ConfirmPassword">ConfirmPassword</label>
                                        <input class="form-control" type="password" autocomplete="confirm-password" aria-required="true" asp-for="@Model.ConfirmPassword" />
                                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                                    </div>


                                    <div class="form-check d-flex justify-content-center mb-5">
                                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3cg" />
                                        <label class="form-check-label" for="form2Example3g">
                                            I agree all statements in <a href="#!" class="text-body"><u>Terms of service</u></a>
                                        </label>
                                    </div>

                                    <div class="text-center">
                                        <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
                                    </div>



                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>